name: Label Commenter

on:
  pull_request_target:
    types: [labeled, unlabeled]

permissions:
  contents: read
  pull-requests: write

jobs:
  comment:
    runs-on: ubuntu-20.04
    steps:
      - uses: actions/checkout@v2

      - name: Label Commenter
        uses: peaceiris/actions-label-commenter@v1